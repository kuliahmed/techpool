<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TechPolitan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FontRegular">
        <item name="android:fontFamily">@font/kanitregular</item>
        <item name="fontFamily">@font/kanitregular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FontBold">
        <item name="android:fontFamily">@font/kanitbold</item>
        <item name="fontFamily">@font/kanitbold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontItalic">
        <item name="android:fontFamily">@font/kanititalic</item>
        <item name="fontFamily">@font/kanititalic</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>